						<configuration>
							<includes>
								<include>*Dao.java</include>
								<include>*Bean.java</include>
								<include>.*entities.*.xml</include>
							</includes>
						</configuration>
					</execution>
				</executions> -->
			</plugin>
		</plugins>
	</build>
	<profiles>
		<profile>
			<id>servlet2</id>
			<activation>
				<activeByDefault>true</activeByDefault>
			</activation>
		</profile>
		<profile>
			<id>servlet3</id>
		</profile>
		<!-- optional modules with dependencies selected by profile -->
		<profile>
			<id>text</id>
			<modules>
				<module>text</module>
			</modules>
		</profile>
		<profile>
			<id>pdf</id>
			<modules>
				<module>pdf</module>
			</modules>
		</profile>
		<profile>
			<id>codec-jai</id>
			<modules>
				<module>common-jai</module>
			</modules>
		</profile>
		<profile>
			<id>codec-imagej</id>
			<modules>
				<module>common-imagej</module>
			</modules>
		</profile>
		<profile>
			<id>codec-bioformats</id>
			<modules>
				<module>common-bioformats</module>
			</modules>
		</profile>
	</profiles>
